<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pa4">


    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Indicates telephony features are used but not required -->
    <uses-feature android:name="android.hardware.telephony" android:required="false" />


    <queries>
        <intent>
            <action android:name="android.intent.action.CALL" />
            <data android:scheme="tel" />
        </intent>
    </queries>



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- MainActivity with a LAUNCHER intent filter, making it the entry point of the app -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- DetailActivity for displaying the details of a selected medical term -->
        <activity android:name=".DetailActivity"
            android:parentActivityName=".MainActivity">
            <!-- Meta-data tag for supporting versions lower than Android 5.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".CPRActivity">
        </activity>

        <activity android:name=".EmergencyEssentialsActivity" />

        <activity android:name=".FirstAidKitActivity" />
        <activity android:name=".EmergencyHealthInformationActivity" />

    </application>

</manifest>